<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.rallibau.saldo.clientes.domain.Cliente" table="clientes">
        <composite-id name="id" class="com.rallibau.saldo.clientes.domain.ClienteId" access="field">
            <key-property column="id" name="value" length="36" access="field" />
        </composite-id>

        <component name="name" class="com.rallibau.saldo.clientes.domain.ClienteName" access="field">
            <property name="value" column="name" type="string" access="field" />
        </component>
    </class>
</hibernate-mapping>
